<div>

<%= form_tag '/login' do %>
<fieldset>
<legend>Please Log In</legend>
<div>
  User ID:  <%= text_field_tag :user_id, params[:user_id] %>
</div>

<div>
  Password:  <%= password_field_tag :password_digest, params[:password_digest] %>
</div>

<div>
  <%= submit_tag "Login" %>
</div>
<% end %>
</fieldset>
</div>