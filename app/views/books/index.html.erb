
<%= render 'search' %>


<p>Available as <%= formatted_time(@available_at) %></p>
<%= page_entries_info @books %>
<div style="float:none; clear:both;"> </div>




<% @books.each do |book| %>
<div>
  <div style="float:left; margin:1em 1em .5em 0;">
